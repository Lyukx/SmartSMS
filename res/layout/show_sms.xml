<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <com.tyf.smartsms.TitleLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/titleBar"/>

    <ListView
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:divider="#0000"
            android:background="#eee"
            android:id="@+id/listView" android:layout_gravity="center_horizontal" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_below="@id/titleBar"
            android:stackFromBottom="true"

            android:layout_marginTop="0dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_marginLeft="0dp"
            android:layout_alignParentTop="false" android:layout_marginTop="954dp"
            android:layout_alignParentBottom="true">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/msg"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send"
                android:id="@+id/send"/>
    </LinearLayout>

</RelativeLayout>